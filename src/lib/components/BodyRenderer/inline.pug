Switch(condition="{item.type}")
    Case(value="link")
        Link(item="{item}" let:text class="relative inline-block underline underline-offset-4 bg-accent1-default/15 text-accent1-default transition-colors hover:bg-accent1-default/26")
            TextWrapper(text="{text}")
                slot
    Case(value="hashtag")
        a(
            class="relative underline underline-offset-4 bg-accent1-default/15 text-accent1-default text-paragraph-l xs:text-paragraph-s transition-colors hover:bg-accent1-default/25"
            href="/c?filter={encodeURIComponent(item.text.toLowerCase().slice(1))}"
        )
            TextWrapper(text="{item.text}")
    Case(value="code")
        code(class="rounded-lg bg-l2 py-0 px-2 text-code font-mono")
            TextWrapper(text="{item.text}") 
    Case(value="price-ticker")
        span(class="relative text-paragraph-l xs:text-paragraph-s text-accent1-default underline decoration-dashed") ${item.text}
    //- Case(value="mention")
    //-     s handle mention
    //- possible removal of image
    Case(value="embed")
        Embed(item="{item}")
    Case(value="image") 
        Image(item="{item}")
    Case(value="text")
        TextWrapper(text!="{escape(item.text)}")
    Case(value="inline")
        TextWrapper(text="{item.text}")